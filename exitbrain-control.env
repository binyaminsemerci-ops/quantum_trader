# ============================================================================
# EXIT BRAIN CONTROL LAYER V1
# ============================================================================
# Central control for Exit Brain v3.5 execution mode
# Changes here take effect on service restart (no code changes needed)

# Core mode (EXIT_BRAIN_V3 = Exit Brain owns exits)
EXIT_MODE=EXIT_BRAIN_V3

# Executor mode: SHADOW (log only) or LIVE (place orders)
EXIT_EXECUTOR_MODE=SHADOW

# Kill-switch: true = force SHADOW regardless of other settings (fail-closed)
EXIT_EXECUTOR_KILL_SWITCH=false

# Rollout percentage: 0-100
# Controls what % of symbols get LIVE mode (rest get SHADOW)
# Example: 20 = 20% symbols LIVE, 80% SHADOW (deterministic per symbol)
EXIT_LIVE_ROLLOUT_PCT=0

# v3.5 feature flags
EXIT_BRAIN_V3_LIVE_ROLLOUT=ENABLED
EXIT_BRAIN_V35_ENABLED=true

# Unbuffered output for real-time logs
PYTHONUNBUFFERED=1
