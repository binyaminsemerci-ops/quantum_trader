/var/log/quantum/utf_publisher.log {
    daily
    rotate 7
    missingok
    notifempty
    compress
    delaycompress
    create 0644 root root
    sharedscripts
    postrotate
        systemctl kill -s HUP quantum-utf-publisher.service 2>/dev/null || true
    endscript
}

/var/log/quantum/clm_minimal.log {
    daily
    rotate 7
    missingok
    notifempty
    compress
    delaycompress
    create 0644 root root
    sharedscripts
    postrotate
        systemctl kill -s HUP quantum-clm-minimal.service 2>/dev/null || true
    endscript
}

/var/log/quantum/utf_clm_health.log {
    weekly
    rotate 4
    missingok
    notifempty
    compress
    delaycompress
    create 0644 root root
}
