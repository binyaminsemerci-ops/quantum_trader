# Quantum Trading Universe Service Configuration
# Copy this file to /etc/quantum/universe-service.env and customize

# Operating mode: testnet or mainnet
# testnet: https://testnet.binancefuture.com/fapi/v1/exchangeInfo
# mainnet: https://fapi.binance.com/fapi/v1/exchangeInfo
UNIVERSE_MODE=testnet

# Refresh interval in seconds (minimum 10)
# How often to fetch exchangeInfo from Binance
UNIVERSE_REFRESH_SEC=60

# Maximum number of symbols to publish (safety cap)
# Prevents memory/performance issues from unexpected API responses
UNIVERSE_MAX=800

# Redis connection
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_DB=0

# HTTP timeout for Binance API calls
HTTP_TIMEOUT_SEC=10
