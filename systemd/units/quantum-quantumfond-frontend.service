[Unit]
Description=Quantum Trader - Quantumfond Frontend (Infrastructure)
After=network.target quantum-redis.service
PartOf=quantum-trader.target

[Service]
Type=simple
User=quantum-quantumfond-frontend
Group=quantum-quantumfond-frontend
WorkingDirectory=/opt/quantum/quantumfond_frontend

EnvironmentFile=/etc/quantum/quantumfond-frontend.env

ExecStart=/usr/bin/node server.js

MemoryHigh=230M
MemoryMax=256M
CPUQuota=50%
TasksMax=64

Restart=always
RestartSec=5s
StartLimitIntervalSec=300
StartLimitBurst=5

StandardOutput=journal
StandardError=journal
SyslogIdentifier=quantum-quantumfond-frontend

NoNewPrivileges=true
PrivateTmp=true
ProtectSystem=strict
ProtectHome=true
ReadOnlyPaths=/opt/quantum

[Install]
WantedBy=quantum-trader.target
