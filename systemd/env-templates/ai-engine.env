# AI Engine Environment Variables
# /etc/quantum/ai-engine.env

PYTHONPATH=/opt/quantum
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_URL=redis://127.0.0.1:6379

# AI Model Configuration
AI_ENGINE_MIN_SIGNAL_CONFIDENCE=0.45
AI_ENGINE_ENSEMBLE_MODELS=["xgb","lgbm","nhits","patchtst"]

# Binance API (TESTNET)
BINANCE_API_KEY=YOUR_TESTNET_API_KEY_HERE
BINANCE_API_SECRET=YOUR_TESTNET_API_SECRET_HERE
BINANCE_USE_TESTNET=true
BINANCE_TESTNET=true

# Feature Flags
CROSS_EXCHANGE_ENABLED=true
ADAPTIVE_LEVERAGE_ENABLED=true
INTELLIGENT_LEVERAGE_ENABLED=true
RL_POSITION_SIZING_ENABLED=true
EXPOSURE_BALANCER_ENABLED=true
PORTFOLIO_GOVERNANCE_ENABLED=true
ENABLE_ORCHESTRATION=true

# Service URLs
CEO_BRAIN_URL=http://127.0.0.1:8010
STRATEGY_BRAIN_URL=http://127.0.0.1:8011
RISK_BRAIN_URL=http://127.0.0.1:8012
RISK_SAFETY_SERVICE_URL=http://127.0.0.1:8003

# Logging
LOG_LEVEL=INFO
LOG_DIR=/var/log/quantum
