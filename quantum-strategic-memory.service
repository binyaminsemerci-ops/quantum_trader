[Unit]
Description=Quantum Strategic Memory System
Documentation=https://github.com/binyaminsemerci-ops/quantum_trader
After=network.target quantum-core.target
PartOf=quantum-ai.target
Requires=quantum-core.target

[Service]
Type=simple
User=qt
Group=qt
WorkingDirectory=/home/qt/quantum_trader
Environment="PATH=/opt/quantum/venvs/ai-engine/bin:/usr/local/bin:/usr/bin:/bin"
Environment="PYTHONPATH=/home/qt/quantum_trader"
ExecStart=/opt/quantum/venvs/ai-engine/bin/python microservices/strategic_memory/memory_sync_service.py
Restart=on-failure
RestartSec=10
StandardOutput=journal
StandardError=journal
SyslogIdentifier=quantum-strategic-memory

[Install]
WantedBy=quantum-ai.target
