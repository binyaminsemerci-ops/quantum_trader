{
  "title": "Quantum Trader - Execution & Trading",
  "tags": ["quantum", "execution", "trading"],
  "timezone": "utc",
  "refresh": "30s",
  "time": {
    "from": "now-6h",
    "to": "now"
  },
  "panels": [
      {
        "id": 1,
        "title": "Auto Executor Status",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "up{name=\"quantum_auto_executor\"}",
            "legendFormat": "Executor"
          }
        ],
        "options": {
          "colorMode": "background",
          "graphMode": "none"
        },
        "fieldConfig": {
          "defaults": {
            "mappings": [
              {"type": "value", "options": {"0": {"text": "DOWN", "color": "red"}}},
              {"type": "value", "options": {"1": {"text": "UP", "color": "green"}}}
            ]
          }
        }
      },
      {
        "id": 2,
        "title": "AI Engine Status",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 6, "y": 0},
        "targets": [
          {
            "expr": "up{job=\"ai-engine-health\"}",
            "legendFormat": "AI Engine"
          }
        ],
        "options": {
          "colorMode": "background",
          "graphMode": "none"
        },
        "fieldConfig": {
          "defaults": {
            "mappings": [
              {"type": "value", "options": {"0": {"text": "DOWN", "color": "red"}}},
              {"type": "value", "options": {"1": {"text": "UP", "color": "green"}}}
            ]
          }
        }
      },
      {
        "id": 3,
        "title": "Portfolio Governance Status",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 12, "y": 0},
        "targets": [
          {
            "expr": "up{job=\"portfolio-governance-health\"}",
            "legendFormat": "Governance"
          }
        ],
        "options": {
          "colorMode": "background",
          "graphMode": "none"
        },
        "fieldConfig": {
          "defaults": {
            "mappings": [
              {"type": "value", "options": {"0": {"text": "DOWN", "color": "red"}}},
              {"type": "value", "options": {"1": {"text": "UP", "color": "green"}}}
            ]
          }
        }
      },
      {
        "id": 4,
        "title": "Dashboard Backend Status",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 18, "y": 0},
        "targets": [
          {
            "expr": "up{job=\"dashboard-backend-health\"}",
            "legendFormat": "Dashboard"
          }
        ],
        "options": {
          "colorMode": "background",
          "graphMode": "none"
        },
        "fieldConfig": {
          "defaults": {
            "mappings": [
              {"type": "value", "options": {"0": {"text": "DOWN", "color": "red"}}},
              {"type": "value", "options": {"1": {"text": "UP", "color": "green"}}}
            ]
          }
        }
      },
      {
        "id": 5,
        "title": "Container Restarts (Last Hour)",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 4},
        "targets": [
          {
            "expr": "changes(node_systemd_unit_state{name=~\"quantum-.*\\.service\"}[1h])",
            "legendFormat": "{{name}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short"
          }
        }
      },
      {
        "id": 6,
        "title": "Service Uptime",
        "type": "table",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 4},
        "targets": [
          {
            "expr": "(time() - node_systemd_unit_start_time_seconds{name=~\"quantum-(auto-executor|ai-engine|redis|portfolio-governance)\\.service\"}) / 3600",
            "format": "table",
            "instant": true
          }
        ],
        "transformations": [
          {"id": "organize", "options": {"excludeByName": {"Time": true, "instance": true, "id": true, "image": true}}}
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "h"
          }
        }
      },
      {
        "id": 7,
        "title": "Executor CPU Usage",
        "type": "graph",
        "gridPos": {"h": 6, "w": 12, "x": 0, "y": 12},
        "targets": [
          {
            "expr": "rate(node_systemd_unit_cpu_seconds_total{name=\"quantum-auto-executor.service\"}[5m]) * 100",
            "legendFormat": "Executor CPU"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent"
          }
        }
      },
      {
        "id": 8,
        "title": "Executor Memory Usage",
        "type": "graph",
        "gridPos": {"h": 6, "w": 12, "x": 12, "y": 12},
        "targets": [
          {
            "expr": "node_systemd_unit_memory_usage_bytes{name=\"quantum-auto-executor.service\"}",
            "legendFormat": "Executor Memory"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "bytes"
          }
        }
      },
      {
        "id": 9,
        "title": "AI Engine CPU Usage",
        "type": "graph",
        "gridPos": {"h": 6, "w": 12, "x": 0, "y": 18},
        "targets": [
          {
            "expr": "rate(node_systemd_unit_cpu_seconds_total{name=\"quantum-ai-engine.service\"}[5m]) * 100",
            "legendFormat": "AI Engine CPU"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent"
          }
        }
      },
      {
        "id": 10,
        "title": "AI Engine Memory Usage",
        "type": "graph",
        "gridPos": {"h": 6, "w": 12, "x": 12, "y": 18},
        "targets": [
          {
            "expr": "node_systemd_unit_memory_usage_bytes{name=\"quantum-ai-engine.service\"}",
            "legendFormat": "AI Engine Memory"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "bytes"
          }
        }
      }
    ]
}
