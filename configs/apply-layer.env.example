# Apply Layer Environment (example)

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379

# Binance Testnet
BINANCE_TESTNET_API_KEY=your_api_key
BINANCE_TESTNET_API_SECRET=your_api_secret

# Apply Layer runtime
APPLY_MODE=testnet
SYMBOLS=BTCUSDT,ETHUSDT,SOLUSDT
APPLY_ALLOWLIST=BTCUSDT
APPLY_POLL_SEC=5

# Prometheus metrics: set to 8043 to enable, 0 to disable
APPLY_METRICS_PORT=8043

# Security: HMAC secret for RECONCILE_CLOSE plans
# Prefer this variable name; legacy RECONCILE_CLOSE_SECRET still supported
RECONCILE_HMAC_SECRET=change_me_in_production
