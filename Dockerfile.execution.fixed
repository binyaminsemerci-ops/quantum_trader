FROM python:3.11-slim
WORKDIR /app
COPY microservices/execution /app/microservices/execution
COPY backend /app/backend
RUN pip install --no-cache-dir aiohttp redis python-binance fastapi uvicorn pydantic asyncio-mqtt
EXPOSE 8002
CMD ["python", "-m", "uvicorn", "microservices.execution.main_v2:app", "--host", "0.0.0.0", "--port", "8002"]
