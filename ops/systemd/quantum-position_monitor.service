[Unit]
Description=Position state tracking
Requires=quantum-core.target
After=quantum-core.target

[Service]
Type=simple
User=qt
WorkingDirectory=/home/qt/quantum_trader
EnvironmentFile=/etc/quantum/position_monitor.env
ExecStart=/home/qt/.local/bin/uv run python microservices/position_monitor/main.py
Restart=on-failure
RestartSec=10
StandardOutput=journal
StandardError=journal

[Install]
WantedBy=quantum-state.target
