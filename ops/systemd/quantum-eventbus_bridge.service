[Unit]
Description=Event bus bridge for observability
Requires=quantum-core.target
After=quantum-core.target

[Service]
Type=simple
User=qt
WorkingDirectory=/home/qt/quantum_trader
EnvironmentFile=/etc/quantum/eventbus_bridge.env
ExecStart=/home/qt/.local/bin/uv run python microservices/eventbus_bridge/main.py
Restart=on-failure
RestartSec=10
StandardOutput=journal
StandardError=journal

[Install]
WantedBy=quantum-obs.target
