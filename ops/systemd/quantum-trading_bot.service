[Unit]
Description=Legacy trading bot



[Service]
Type=simple
User=qt
WorkingDirectory=/home/qt/quantum_trader
EnvironmentFile=/etc/quantum/trading_bot.env
ExecStart=/home/qt/.local/bin/uv run python microservices/trading_bot/main.py
Restart=on-failure
RestartSec=10
StandardOutput=journal
StandardError=journal

[Install]
WantedBy=quantum-core.target
