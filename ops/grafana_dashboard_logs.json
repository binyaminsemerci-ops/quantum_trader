{
  "dashboard": {
    "id": null,
    "uid": "logs-quantum-v1",
    "title": "Quantum Trader - Log Aggregation",
    "tags": ["quantum", "logs"],
    "timezone": "browser",
    "schemaVersion": 27,
    "refresh": "10s",
    "panels": [
      {
        "id": 1,
        "title": "Log Volume (All Services)",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "sum(rate({job=~\"quantum_trader|systemd\"}[1m]))",
            "refId": "A",
            "datasource": {"type": "loki", "uid": "cfa34asc6p91ca"}
          }
        ],
        "options": {
          "legend": {"displayMode": "list", "placement": "bottom"}
        }
      },
      {
        "id": 2,
        "title": "Error Rate",
        "type": "stat",
        "gridPos": {"h": 8, "w": 6, "x": 12, "y": 0},
        "targets": [
          {
            "expr": "sum(rate({job=\"quantum_trader\"} |~ \"ERROR|CRITICAL\" [5m]))",
            "refId": "A",
            "datasource": {"type": "loki", "uid": "cfa34asc6p91ca"}
          }
        ],
        "options": {
          "colorMode": "background",
          "graphMode": "area",
          "orientation": "auto"
        },
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 0.1},
                {"color": "red", "value": 1}
              ]
            }
          }
        }
      },
      {
        "id": 3,
        "title": "Service Health (Systemd)",
        "type": "stat",
        "gridPos": {"h": 8, "w": 6, "x": 18, "y": 0},
        "targets": [
          {
            "expr": "count(count_over_time({job=\"systemd\",unit=~\"quantum-.*\"} [1m]))",
            "refId": "A",
            "datasource": {"type": "loki", "uid": "cfa34asc6p91ca"}
          }
        ],
        "options": {
          "colorMode": "value",
          "graphMode": "none",
          "textMode": "value_and_name"
        }
      },
      {
        "id": 4,
        "title": "Recent Quantum Trader Logs",
        "type": "logs",
        "gridPos": {"h": 12, "w": 12, "x": 0, "y": 8},
        "targets": [
          {
            "expr": "{job=\"quantum_trader\"}",
            "refId": "A",
            "datasource": {"type": "loki", "uid": "cfa34asc6p91ca"}
          }
        ],
        "options": {
          "showTime": true,
          "showLabels": false,
          "wrapLogMessage": true,
          "prettifyLogMessage": false,
          "enableLogDetails": true,
          "dedupStrategy": "none",
          "sortOrder": "Descending"
        }
      },
      {
        "id": 5,
        "title": "Systemd Service Logs",
        "type": "logs",
        "gridPos": {"h": 12, "w": 12, "x": 12, "y": 8},
        "targets": [
          {
            "expr": "{job=\"systemd\",unit=~\"quantum-.*\"}",
            "refId": "A",
            "datasource": {"type": "loki", "uid": "cfa34asc6p91ca"}
          }
        ],
        "options": {
          "showTime": true,
          "showLabels": true,
          "wrapLogMessage": true,
          "prettifyLogMessage": false,
          "enableLogDetails": true,
          "dedupStrategy": "none",
          "sortOrder": "Descending"
        }
      },
      {
        "id": 6,
        "title": "Error & Warning Logs",
        "type": "logs",
        "gridPos": {"h": 10, "w": 24, "x": 0, "y": 20},
        "targets": [
          {
            "expr": "{job=\"quantum_trader\"} |~ \"ERROR|WARN|CRITICAL\"",
            "refId": "A",
            "datasource": {"type": "loki", "uid": "cfa34asc6p91ca"}
          }
        ],
        "options": {
          "showTime": true,
          "showLabels": false,
          "wrapLogMessage": true,
          "prettifyLogMessage": false,
          "enableLogDetails": true,
          "dedupStrategy": "exact",
          "sortOrder": "Descending"
        }
      },
      {
        "id": 7,
        "title": "Signal Activity Logs",
        "type": "logs",
        "gridPos": {"h": 10, "w": 24, "x": 0, "y": 30},
        "targets": [
          {
            "expr": "{job=\"quantum_trader\"} |~ \"BUY|SELL|HOLD\"",
            "refId": "A",
            "datasource": {"type": "loki", "uid": "cfa34asc6p91ca"}
          }
        ],
        "options": {
          "showTime": true,
          "showLabels": false,
          "wrapLogMessage": true,
          "prettifyLogMessage": false,
          "enableLogDetails": true,
          "dedupStrategy": "none",
          "sortOrder": "Descending"
        }
      }
    ],
    "time": {"from": "now-1h", "to": "now"},
    "timepicker": {
      "refresh_intervals": ["5s", "10s", "30s", "1m", "5m", "15m", "30m", "1h"]
    }
  },
  "overwrite": true
}
