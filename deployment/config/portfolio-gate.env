# P2.6 Portfolio Gate Configuration

# Redis connection
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# Symbol allowlist (comma-separated)
P26_ALLOWLIST=BTCUSDT,ETHUSDT,SOLUSDT

# Permit & cooldown
P26_PERMIT_TTL=60
P26_COOLDOWN_SEC=60
P26_POLL_INTERVAL=5

# Prometheus metrics
P26_METRICS_PORT=8047

# Logging
P26_LOG_LEVEL=INFO

# Portfolio stress configuration (no hardcoded USD values)
# Heat normalization range
P26_H_MIN=0.05
P26_H_MAX=0.35

# Stress thresholds
P26_STRESS_FULLCLOSE_MIN=0.55
P26_STRESS_RISKOFF=0.80
P26_KS_HARD=0.85

# Stress formula weights: Stress = A*heat + B*concentration + C*correlation
P26_A=0.60
P26_B=0.25
P26_C=0.15
