# ==============================================================================
# P2.7 HeatBridge - Environment Configuration
# ==============================================================================

# Redis connection
REDIS_HOST=localhost
REDIS_PORT=6379

# Stream configuration
P27_STREAM_IN=quantum:stream:harvest.heat.decision
P27_GROUP=heat_bridge
P27_CONSUMER=heat_bridge_1
P27_POLL_MS=500
P27_BATCH=10

# TTL for lookup keys (seconds)
P27_TTL_PLAN_SEC=1800
P27_TTL_SYMBOL_SEC=1800
P27_DEDUPE_TTL_SEC=120

# HTTP ports for metrics and health
P27_METRICS_PORT=8070
P27_HEALTH_PORT=8071

# Logging
P27_LOG_LEVEL=INFO
