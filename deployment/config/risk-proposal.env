# P1.5 Risk Proposal Publisher Configuration

# Redis connection
REDIS_URL=redis://localhost:6379

# Symbols to monitor (comma-separated)
SYMBOLS=BTCUSDT,ETHUSDT,SOLUSDT

# Publish interval (seconds)
PUBLISH_INTERVAL_SEC=10

# Position source mode
# auto: try redis_hash → redis_stream → synthetic
# redis_hash: only quantum:state:positions
# redis_stream: only quantum:stream:execution.result
# synthetic: generate test positions
POSITION_SOURCE=auto

# Enable stream publishing (in addition to hash)
# If true, publishes to quantum:stream:risk.proposal for time-series data
ENABLE_STREAM=false

# Logging level
LOG_LEVEL=INFO
