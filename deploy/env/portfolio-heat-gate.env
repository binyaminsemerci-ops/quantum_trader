# P2.6 Portfolio Heat Gate Configuration
# Hedge Fund OS Edition

# Redis connection
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# Operation mode: shadow (log only) or enforce (modify proposals)
P26_MODE=shadow

# Portfolio heat thresholds
# COLD: < 0.25 (low risk, preserve winners)
# WARM: 0.25-0.65 (moderate risk, partial closes OK)
# HOT: >= 0.65 (high risk, full closes allowed)
HEAT_MIN=0.25
HEAT_MAX=0.65

# Polling interval (seconds)
P26_POLL_SEC=2

# Prometheus metrics port
P26_METRICS_PORT=8056

# Log level
P26_LOG_LEVEL=INFO
