# P3.0 Performance Attribution Brain Configuration

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# Mode: shadow (log only) | enforce (write attributions)
P30_MODE=shadow

# Loop interval
P30_INTERVAL_SEC=5

# Prometheus metrics port
P30_METRICS_PORT=8061

# EWMA smoothing factor (0-1, higher = more reactive)
EWMA_ALPHA=0.3

# Lookback window (number of trades to analyze)
LOOKBACK_WINDOW=20

# LKG (Last Known Good) max age in seconds
MAX_LKG_AGE_SEC=900

# Attribution TTL in Redis (seconds)
ATTRIBUTION_TTL_SEC=300

# Logging
LOG_LEVEL=INFO
