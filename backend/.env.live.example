# Runtime env for VPS (copy to backend/.env.live and fill secrets)

PYTHONUNBUFFERED=1

# Database (use SQLite path inside container or a managed DB like Postgres)
# Example SQLite path (already volume-mounted in compose):
DB_URL=sqlite:////app/database/trades.db

# Binance Futures API keys
BINANCE_API_KEY=__REPLACE_ME__
BINANCE_API_SECRET=__REPLACE_ME__

# Trading config
DEFAULT_BALANCE=1000
DEFAULT_RISK_PERCENT=1.0
QT_XGB_THRESHOLD=0.0005
QT_ADMIN_TOKEN=__SET_A_STRONG_RANDOM_TOKEN__

# Optional logging level
# LOG_LEVEL=INFO
# Live deployment environment example (copy to backend/.env.live and fill secrets)
STAGING_MODE=false
QT_ADMIN_TOKEN=live-admin-token

# Execution adapter
QT_EXECUTION_EXCHANGE=binance-futures
QT_MARKET_TYPE=usdm_perp
QT_MARGIN_MODE=cross
QT_DEFAULT_LEVERAGE=5
QT_LIQUIDITY_STABLE_QUOTES=USDT,USDC

# Risk limits (tune as needed)
QT_MAX_NOTIONAL_PER_TRADE=150
QT_MAX_DAILY_LOSS=300
QT_MAX_POSITION_PER_SYMBOL=400
QT_MAX_GROSS_EXPOSURE=2500
QT_KILL_SWITCH=false
QT_FAILSAFE_RESET_MINUTES=30

# Scheduler (adjust cadences for production)
QUANTUM_TRADER_LIQUIDITY_REFRESH_SECONDS=900
QUANTUM_TRADER_EXECUTION_SECONDS=1800
# Set to 1 to disable a job
QUANTUM_TRADER_DISABLE_LIQUIDITY=0
QUANTUM_TRADER_DISABLE_EXECUTION=0

# Execution engine thresholds
QT_EXECUTION_MIN_NOTIONAL=50.0
QT_EXECUTION_MAX_ORDERS=10
QT_EXECUTION_CASH_BUFFER=0.0
QT_EXECUTION_ALLOW_PARTIAL=true

# Binance API credentials (DO NOT COMMIT REAL VALUES)
BINANCE_API_KEY=__REPLACE__
BINANCE_API_SECRET=__REPLACE__
