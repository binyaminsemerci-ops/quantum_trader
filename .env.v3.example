# ============================================================================
# Quantum Trader v3.0 - Environment Variables Template
# ============================================================================
# 
# Copy this file to .env and fill in your values
# 
# Usage:
#   cp .env.v3.example .env
#   # Edit .env with your credentials
#   docker-compose up
# 
# ============================================================================

# ============================================================================
# BINANCE API CREDENTIALS
# ============================================================================
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_API_SECRET=your_binance_api_secret_here
BINANCE_TESTNET=true  # Set to false for production trading

# ============================================================================
# DATABASE CREDENTIALS
# ============================================================================
POSTGRES_DB=quantum_trader
POSTGRES_USER=quantum_user
POSTGRES_PASSWORD=quantum_password_2025

# ============================================================================
# REDIS CONFIGURATION
# ============================================================================
REDIS_URL=redis://redis:6379
REDIS_MAXMEMORY=2gb
REDIS_MAXMEMORY_POLICY=allkeys-lru

# ============================================================================
# GRAFANA CREDENTIALS
# ============================================================================
GRAFANA_ADMIN_PASSWORD=quantum_admin_2025

# ============================================================================
# SERVICE CONFIGURATION
# ============================================================================
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL

# AI Service
MIN_CONFIDENCE_THRESHOLD=0.6
UNIVERSE_SCAN_INTERVAL_SECONDS=300
SIGNAL_GENERATION_INTERVAL_SECONDS=60

# Exec-Risk Service
MAX_LEVERAGE=20.0
MAX_POSITION_SIZE_USD=10000.0
MAX_PORTFOLIO_EXPOSURE_USD=50000.0
MAX_DAILY_DRAWDOWN_PERCENT=10.0

# Analytics-OS Service
HFOS_ENABLED=true
PBA_ENABLED=true
PAL_ENABLED=true
CLM_ENABLED=true
AUTO_RESTART_ENABLED=true

# ============================================================================
# MONITORING
# ============================================================================
PROMETHEUS_RETENTION_TIME=30d
GRAFANA_PORT=3000

# ============================================================================
# FEATURE FLAGS
# ============================================================================
MICROSERVICES_MODE=true  # Enable microservices architecture
SELF_HEALING_V3_ENABLED=true
HEALTH_V3_ENABLED=true
